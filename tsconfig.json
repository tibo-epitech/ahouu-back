{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "strict": true
  },
  "include": [
    "src",
    "config",
    "tests"
  ],
  "exclude": [
    "migrations",
    "node_modules",
  ]
}